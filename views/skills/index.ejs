<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skills Index</title>
</head>
<body>
    <h1>Skills</h1>
    <a href="/skills/new">Add New Skill!</a>
    <ul>
        <% skills.forEach(function(s) { %>
         <li>
            <a href="/skills/<%= s.name %>"><%= s.name %> </a>
            -
            <%= s.difficulty %> 
            -
             <%= s.gained ? 'learned!' : 'still working on it...' %> 
         </li>
        <% }); %>
    </ul>
</body>
</html>